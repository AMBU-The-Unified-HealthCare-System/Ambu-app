<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DriverOrCustomerFragment">


    <Button
        android:id="@+id/btn_drivers"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Drivers Click here"
        app:layout_constraintBottom_toTopOf="@+id/btn_customers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_customers"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:text="Customers Click here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_drivers" />
</androidx.constraintlayout.widget.ConstraintLayout>